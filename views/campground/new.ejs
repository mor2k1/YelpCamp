<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Create a new Campground</h1>
        <div class="jumbotron">
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group"> <!-- group things togthere and gives us a little space -->
                        <input class="form-control" type="text" placeholder="New Campground" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image url" name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Description" name="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button> 
                        <!-- btn-block will resize the button to the input size which defined in the style. -->
                    </div>
                    <a href="/campgrounds">Go back</a>
                </form>
            </div>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>