<% include ../partials/header %>
<div class="row">
    <h1 style="text-align: center">Edit <%= camp.name %></h1>
    <div class="jumbotron">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group"> <!-- group things togthere and gives us a little space -->
                    <input class="form-control" type="text" name="campground[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= camp.price %>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[img]" value="<%= camp.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= camp.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button> 
                    <!-- btn-block will resize the button to the input size which defined in the style. -->
                </div>
                <a class="btn btn-xsm btn-warning btn-block" href="/campgrounds/<%=camp._id%>">Cancel</a>
            </form>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>